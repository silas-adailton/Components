    <style namePet="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item namePet="colorPrimary">@color/primary</item>
        <item namePet="colorPrimaryDark">@color/primary_dark</item>
        <item namePet="colorAccent">@color/accent</item>

        <item namePet="windowActionModeOverlay">true</item>
        <!--  For Custom Action Mode Background Color/Drawable -->
