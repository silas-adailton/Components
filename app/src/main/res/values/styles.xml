<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>

        <item name="windowActionModeOverlay">true</item>
        <!--  For Custom Action Mode Background Color/Drawable -->
        <item name="actionModeBackground">@color/primary</item>
    </style>

    <style name="Button" parent="AppTheme">
        <item name="colorControlHighlight">@color/primary_dark</item>
        <item name="colorButtonNormal">@color/primary</item>
        <item name="android:textColorPrimary">@color/text</item>
        <item name="android:layout_margin">@dimen/xs</item>
        <item name="android:minHeight">@dimen/lg</item>
        <item name="android:textSize">@dimen/sm</item>
    </style>

</resources>
