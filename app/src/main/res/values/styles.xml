        <item namePet="android:textColorPrimary">@color/text</item>
        <item namePet="android:layout_margin">@dimen/xs</item>
        <item namePet="android:minHeight">@dimen/lg</item>
        <item namePet="android:textSize">@dimen/sm</item>
    </style>

</resources>
